{
  "name": "@kawaiii/contracts",
  "version": "0.1.0",
  "description": "Kawaiii™️ contracts",
  "author": "Kawaiii™️ Team <inbox@kawaiii.co>",
  "license": "UNLICENSED",
  "type": "module",
  "engines": {
    "node": "18"
  },
  "scripts": {
    "clean": "rm -r artifacts cache dist typechain",
    "typechain": "typechain --target ethers-v5 \"artifacts/**/*.sol/!(*.dbg).json\" --out-dir typechain --discriminate-types",
    "build": "hardhat compile && pnpm run typechain && tsc",
    "deploy:dev": "hardhat run scripts/deploy.js --network dev",
    "deploy:prod": "hardhat run scripts/deploy.js --network prod",
    "node": "hardhat node"
  },
  "dependencies": {
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/bytes": "^5.7.0",
    "@ethersproject/contracts": "^5.7.0",
    "@ethersproject/providers": "^5.7.2"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.2.2",
    "@openzeppelin/contracts": "^4.8.1",
    "@typechain/ethers-v5": "^10.2.0",
    "dotenv": "^16.0.3",
    "ethers": "^5.7.2",
    "hardhat": "2.12.0-esm.1",
    "typechain": "^8.1.1",
    "typescript": "^4.9.5"
  },
  "files": [
    "contracts",
    "dist"
  ],
  "exports": {
    "./typechain": "./dist/index.js",
    "./typechain/*": "./dist/*",
    "./contracts/*": "./contracts/*"
  },
  "typesVersions": {
    "*": {
      "typechain/*": [
        "dist/*"
      ]
    }
  }
}
